<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
">
	
	<!-- Basic Configuration -->
	<context:component-scan
		base-package="com.triplelands.megawastu.valas.moneychanger.snap.service" />
		
	<context:component-scan
		base-package="	com.triplelands.megawastu.valas.moneychanger.domain" />
		
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:application.properties</value>
			</list>
		</property>
	</bean>		

	<!-- JMS Configuration -->
	<bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL" value="${jms.brokerURL}" />
	</bean>
	
	<!-- Rate updated Listener -->
	<bean id="rateUpdatedDestination" class="org.apache.activemq.command.ActiveMQTopic">
		<constructor-arg value="${jms.ratesUpdate.topic}" />
	</bean>
		
	<bean class="org.springframework.jms.listener.SimpleMessageListenerContainer">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="destination" ref="rateUpdatedDestination" />
		<property name="messageListener" ref="rateUpdatedListener" />
	</bean>
	
	<!-- Fix rates publisher -->
	<bean id="snapDestination" class="org.apache.activemq.command.ActiveMQTopic">
		<constructor-arg value="${jms.fixRate.topic}" />
	</bean>

	<bean id="snapJmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="connectionFactory" />
		<property name="receiveTimeout" value="10000" />
		<property name="defaultDestination" ref="snapDestination"></property>
		<property name="messageConverter" ref="ratesMessageConverter"></property>
	</bean>
	
	
	<bean id="snapService" class="com.triplelands.megawastu.valas.moneychanger.snap.service.SnapService">
		<property name="currencyListForSnap">
			<list>
				<value>IDR</value>
				<value>MYR</value>
			</list>
		</property>
	</bean>	
	
	<!-- Scheduler Config -->
	<bean name="snapGeneratorJob"
		class="org.springframework.scheduling.quartz.JobDetailBean">
 		<property name="jobClass" value="com.triplelands.megawastu.valas.moneychanger.snap.scheduler.SnapGeneratorJob" />
 
		<property name="jobDataAsMap">
		<map>
			<entry key="snapService" value-ref="snapService" />
		</map>
		</property>
		
	</bean>
	
	<bean id="simpleTrigger"
		class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="snapGeneratorJob" />
		<property name="repeatInterval" value="${quartz.interval}" />
		<property name="startDelay" value="1000" />
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
		   <list>
		      <ref bean="snapGeneratorJob" />
		   </list>
		</property>
 
		<property name="triggers">
		    <list>
			<ref bean="simpleTrigger" />
		    </list>
		</property>
   </bean>
</beans>


