<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="task" class="com.triplelands.megawastu.valas.moneychanger.scheduler.RateGenerator" >
		<property name="directory" value="${rate.directory}"></property>
		<property name="fileName" value="${rate.fileName}"></property>
		<property name="rateDao" ref="rateDao"></property>
	</bean>
	
	<bean name="rateFeederJob"
		class="org.springframework.scheduling.quartz.JobDetailBean">
 		<property name="jobClass" value="com.triplelands.megawastu.valas.moneychanger.scheduler.RateFeederJob" />
 
		<property name="jobDataAsMap">
		<map>
			<entry key="rateGenerator" value-ref="task" />
		</map>
		</property>
	</bean>
	
	<bean id="simpleTrigger"
		class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="rateFeederJob" />
		<property name="repeatInterval" value="${quartz.interval}" />
		<property name="startDelay" value="1000" />
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
		   <list>
		      <ref bean="rateFeederJob" />
		   </list>
		</property>
 
		<property name="triggers">
		    <list>
			<ref bean="simpleTrigger" />
		    </list>
		</property>
   </bean>
	
</beans>
